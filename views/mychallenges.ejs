	<nav class="navbar navbar-default">
		<div class="container">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
			        <span class="icon-bar"></span>
			        <span class="icon-bar"></span>
			        <span class="icon-bar"></span>                        
			    </button>
				<a href="/home" class="navbar-brand"><span class="glyphicon glyphicon-king" aria-hidden="true"></span> PANTOMATH</a>
			</div>
			<div class="collapse navbar-collapse" id="myNavbar">
				<ul class="nav navbar-nav">
					<li><a href="#">About</a></li>
					<li><a href="/users"><span class="glyphicon glyphicon-user" aria-hidden="true"></span>Users</a></li>
				</ul>
				<ul class="nav navbar-nav navbar-right">

					<% if(!currentUser){ %>
						<li><a href="/register"><span class="glyphicon glyphicon-user" aria-hidden="true"></span><span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Signup</a></li>
						<li><a href="/login"><span class="glyphicon glyphicon-log-in" aria-hidden="true"></span> Login</a></li>
					<% } else { %>
						<li><a><b><%= currentUser.username %></b></a></li>
						<li><a href="/logout"><span class="glyphicon glyphicon-log-out" aria-hidden="true"></span> Logout</a></li>
					<% } %>

				</ul>
			</div>
		</div>
	</nav>
    <div class="container">
		<div class="col-lg-1"></div>
		<div class="col-lg-10">
			<div id="ui" class="jumbotron">
                <div class="container">
                    <div class="col-lg-1">
                        <a class="btn btn-small btn-info" id="back" href="/dashboard/<%= currentUser._id %>">
                            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span> DASHBOARD
                        </a>
                    </div>
                </div><hr>
                <h1><strong>MY CHALLENGES</strong></h1>
                <h4><strong><%= currentUser.username %></strong> See what challenges u have taken...</h4><hr>
                <a class="btn btn-lg btn-success" href="/<%= currentUser._id %>/mychallenges/new">
                    NEW CHALLENGE <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                </a>
            </div>
            <br>
            <div class="jumbotron" style="background-color: rgba(180,190,200,0.68);">
				<h2><strong>COMPLETED CHALLENGES :</strong></h2><br>
				<% comp.forEach(function(ch){ %>
					<div class="row myrow">
						<div class="col-lg-5 col-md-5 col-sm-5 col-xs-5">
							<h3 style="text-align: right;"><strong><%= ch.byName %></strong></h3>
							<h4 style="text-align: right;"><strong><%= ch.scoreBy %></strong></h4>
						</div>
						<div class="col-lg-2 col-md-2 col-sm-2 col-xs-2">
							<h2 style="text-align: center;"><span class="glyphicon glyphicon-flash" aria-hidden="true"></span></h2>
						</div>
						<div class="col-lg-5 col-md-5 col-sm-5 col-xs-5">
							<h3 style="text-align: left;"><strong><%= ch.againstName %></strong></h3>
							<h4 style="text-align: left;"><strong><%= ch.scoreAgainst %></strong></h4>
						</div>
					</div>
				<% }); %>
            </div><br>
            <div class="jumbotron" style="background-color: rgba(180,190,200,0.68);">
				<h2><strong>INCOMPLETE OUTGOING CHALLENGES :</strong></h2><br>
				<% outgoing.forEach(function(ch){ %>
					<div class="row myrow">
						<div class="col-lg-5 col-md-5 col-sm-5 col-xs-5">
							<h3 style="text-align: right;"><strong><%= ch.byName %></strong></h3>
							<h4 style="text-align: right;"><strong><%= ch.scoreBy %></strong></h4>
						</div>
						<div class="col-lg-2 col-md-2 col-sm-2 col-xs-2">
							<h2 style="text-align: center;"><span class="glyphicon glyphicon-flash" aria-hidden="true"></span></h2>
						</div>
						<div class="col-lg-5 col-md-5 col-sm-5 col-xs-5">
							<h3 style="text-align: left;"><strong><%= ch.againstName %></strong></h3>
						</div>
					</div>
				<% }); %>
            </div><br>
            <div class="jumbotron" style="background-color: rgba(180,190,200,0.68);">
				<h2><strong>INCOMPLETE INCOMING CHALLENGES :</strong></h2><br>
				<% incoming.forEach(function(ch){ %>
					<a href="/<%= currentUser._id %>/mychallenges/existing/<%= ch._id %>" class="row btn btn-block btn-default">
						<div class="col-lg-5 col-md-5 col-sm-5 col-xs-5">
							<h3 style="text-align: right;"><strong><%= ch.byName %></strong></h3>
							<h4 style="text-align: right;"><strong><%= ch.scoreBy %></strong></h4>
						</div>
						<div class="col-lg-2 col-md-2 col-sm-2 col-xs-2">
							<h2 style="text-align: center;"><span class="glyphicon glyphicon-flash" aria-hidden="true"></span></h2>
						</div>
						<div class="col-lg-5 col-md-5 col-sm-5 col-xs-5">
							<h3 style="text-align: left;"><strong><%= ch.againstName %></strong></h3>
						</div>
					</a>
				<% }); %>
            </div><br>
		</div>
		<div class="col-lg-1"></div>
	</div>

</body>
</html>