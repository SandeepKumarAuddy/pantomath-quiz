<body>
    <nav class="navbar navbar-default">
		<div class="container">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
			        <span class="icon-bar"></span>
			        <span class="icon-bar"></span>
			        <span class="icon-bar"></span>                        
			    </button>
				<a href="/home" class="navbar-brand"><span class="glyphicon glyphicon-king" aria-hidden="true"></span> PANTOMATH</a>
			</div>
			<div class="collapse navbar-collapse" id="myNavbar">
				<ul class="nav navbar-nav">
					<li><a href="#">About</a></li>
					<li><a href="/users"><span class="glyphicon glyphicon-user" aria-hidden="true"></span>Users</a></li>
				</ul>
				<ul class="nav navbar-nav navbar-right">

					<% if(!currentUser){ %>
						<li><a href="/register"><span class="glyphicon glyphicon-user" aria-hidden="true"></span><span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Signup</a></li>
						<li><a href="/login"><span class="glyphicon glyphicon-log-in" aria-hidden="true"></span> Login</a></li>
					<% } else { %>
						<li><a><b><%= currentUser.username %></b></a></li>
						<li><a href="/logout"><span class="glyphicon glyphicon-log-out" aria-hidden="true"></span> Logout</a></li>
					<% } %>

				</ul>
			</div>
		</div>
	</nav>
    <div class="container">
		<div class="col-lg-3 col-md-2 col-sm-1 col-xs-0"></div>
		<div class="col-lg-6 col-md-8 col-sm-10 col-xs-12">
			<div id="ui" class="jumbotron">
                <div class="container">
                    <div class="col-lg-1">
                        <a class="btn btn-small btn-info" id="back" href="/<%= user._id %>/myposts">
                            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span> Go Back
                        </a>
                    </div>
                </div><hr>
                <h3><strong>ADD new POST :</strong></h3><hr>
                <div class="well">
                    <form class="form-group" action="/<%= user._id %>/myposts" method="POST">
                        <input class="form-control" type="text" name="question[statement]" placeholder="Type in the Question statement..." required>
                        <hr>

                        <label style="text-align: left;"><strong>option-A</strong></label><input class="form-control" type="text" name="question[A]" placeholder="option-A" required><br>
                        <label style="text-align: left;"><strong>option-B</strong></label><input class="form-control" type="text" name="question[B]" placeholder="option-B" required><br>
                        <label style="text-align: left;"><strong>option-C</strong></label><input class="form-control" type="text" name="question[C]" placeholder="option-C" required><br>
                        <label style="text-align: left;"><strong>option-D</strong></label><input class="form-control" type="text" name="question[D]" placeholder="option-D" required><br>

                        <fieldset>
                            <legend>Select the correct Answer :</legend>
                            <input class="form-control" id="A" type="radio" name="question[correctOpt]" value="A" required><label for="A">option-A</label>
                            <input class="form-control" id="B" type="radio" name="question[correctOpt]" value="B" required><label for="B">option-B</label>
                            <input class="form-control" id="C" type="radio" name="question[correctOpt]" value="C" required><label for="C">option-C</label>
                            <input class="form-control" id="D" type="radio" name="question[correctOpt]" value="D" required><label for="D">option-D</label>
                        </fieldset><br>
                        <input class="btn btn-lg btn-block btn-primary" type="submit" value="SUBMIT POST">

                    </form>
                </div>
            </div>
		</div>
		<div class="col-lg-3 col-md-2 col-sm-1 col-xs-0"></div>
	</div>
</body>
</html>