<!DOCTYPE html>
<html>
<head>
	<title>Dashboard</title>
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Latest compiled and minified CSS -->
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">

	<!-- jQuery library -->
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>

	<!-- Latest compiled JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    
    <style type="text/css">

        html
        {
            width: 100%;
            height: 100%;
        }
        body
		{
            width: 100%;
            height: 100%;
			background-image: url(https://66.media.tumblr.com/0461d0396e5b54a5b38d57783205d805/tumblr_nr4q2jMiDq1t2f1h6o1_1280.jpg);
			background-size: cover;
			background-position: center;
			background-attachment: fixed;
		}
        #ui
        {
            background-color: rgba(100,255,255,0.6);
            text-align:center
            
        }
        
	</style>
</head>
<body>
    <nav class="navbar navbar-default">
		<div class="container">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
			        <span class="icon-bar"></span>
			        <span class="icon-bar"></span>
			        <span class="icon-bar"></span>                        
			    </button>
				<a href="/home" class="navbar-brand"><span class="glyphicon glyphicon-king" aria-hidden="true"></span> PANTOMATH</a>
			</div>
			<div class="collapse navbar-collapse" id="myNavbar">
				<ul class="nav navbar-nav">
					<li><a href="#">About</a></li>
					<li><a href="/users"><span class="glyphicon glyphicon-user" aria-hidden="true"></span>Users</a></li>
				</ul>
				<ul class="nav navbar-nav navbar-right">

					<% if(!currentUser){ %>
						<li><a href="/register"><span class="glyphicon glyphicon-user" aria-hidden="true"></span><span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Signup</a></li>
						<li><a href="/login"><span class="glyphicon glyphicon-log-in" aria-hidden="true"></span> Login</a></li>
					<% } else { %>
						<li><a><b><%= currentUser.username %></b></a></li>
						<li><a href="/logout"><span class="glyphicon glyphicon-log-out" aria-hidden="true"></span> Logout</a></li>
					<% } %>

				</ul>
			</div>
		</div>
	</nav>
    <div class="container">
		<div class="col-lg-3 col-md-2 col-sm-1 col-xs-0"></div>
		<div class="col-lg-6 col-md-8 col-sm-10 col-xs-12">
			<div id="ui" class="jumbotron">
                <h2><span class="glyphicon glyphicon-hourglass" aria-hidden="true"></span></h2>
                
                <h3><strong>RESULT:</strong></h3><hr>
                <div class="container">
                    <div class="col-xs-6" style="border-right: black solid;">
                        <h4 style="text-align: right; color: darkgreen;"><%= item.byName %></h4>
                    </div>
                    <div class="col-xs-6" style="border-left: black solid;">
                        <h4 style="text-align: left; color: darkgreen;"><%= item.againstName %></h4>
                    </div>
				</div><hr>
				<div class="container">
					<div class="col-xs-6" style="border-right: black solid;">
						<% item.scoreBy.forEach(function(x){ %>
							<% if(x==0){ %>
							<h4 style="text-align: right;"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></h4>
							<% } else { %>
                            <h4 style="text-align: right;"><span class="glyphicon glyphicon-ok" aria-hidden="true"></span></h4>
                            <% } %>
						<% }); %>
                    </div>
                    <div class="col-xs-6" style="border-left: black solid;">
						<% if(item.scoreAgainst.length > 0){ %>
							<% item.scoreAgainst.forEach(function(x){ %>
								<% if(x==0){ %>
								<h4 style="text-align: left;"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></h4>
								<% } else { %>
                                <h4 style="text-align: left;"><span class="glyphicon glyphicon-ok" aria-hidden="true"></span></h4>
                                <% } %>
							<% }); %>
						<% } %>
					</div>
                </div>
                <br>
                <a href="/<%= currentUser._id %>/mychallenges" class="btn btn-primary btn-block">OKAY...</a>
            </div>
		</div>
		<div class="col-lg-3 col-md-2 col-sm-1 col-xs-0"></div>
    </div>
</body>
</html>